<odoo>

    <record id="area_master_configuration_view_form"
        model="ir.ui.view">
        <field name="name">res.area.view.form</field>
        <field name="model">res.area</field>
        <field name="arch"
            type="xml">
            <form string="Area">
                <sheet>
                    <div class="oe_title">
                        <label for="name" />
                        <h1>
                            <field name="name"
                                class="oe_inline"
                                placeholder="Area 1" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="state_id" />
                            <field name="country_id" />
                        </group>
                        <group>
                            <field name="branch_ids"
                                widget="many2many_tags"
                                readonly="True" />
                            <field name="company_id" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="area_master_configuration_view_tree"
        model="ir.ui.view">
        <field name="name">res.area.view.tree</field>
        <field name="model">res.area</field>
        <field name="arch"
            type="xml">
            <list string="Area">
                <field name="name" />
                <field name="state_id" />
                <field name="branch_ids"
                    widget="many2many_tags"
                    readonly="True" />
            </list>
        </field>
    </record>

    <record id="area_master_configuration_action"
        model="ir.actions.act_window">
        <field name="name">Area</field>
        <field name="res_model">res.area</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>