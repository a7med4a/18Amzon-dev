<odoo>

    <record id="fleet_vehicle_view_form" model="ir.ui.view">
        <field name="name">fleet.vehicle.branch.tracking.view.form.inherit</field>
        <field name="model">fleet.vehicle</field>
        <field name="inherit_id" ref="fleet.fleet_vehicle_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="view_related_branch_tracking" type="object" class="oe_stat_button" icon="fa-link" help="show related branch tracking for this vehicle" invisible="branch_tracking_count == 0">
                    <field name="branch_tracking_count" widget="statinfo" string="Branch Tracking"/>
                </button>
            </xpath>
        </field>
    </record>

</odoo>