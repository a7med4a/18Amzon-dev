<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data noupdate="1">

    <!-- Standard stages for Maintenance Request -->
    <record id="maintenance.stage_0" model="maintenance.stage">
        <field name="name">New Request</field>
        <field name="stage_type">new</field>
        <field name="sequence" eval="1" />
        <field name="fold" eval="False" />
    </record>
    <record id="maintenance.stage_1" model="maintenance.stage">
        <field name="name">Under Approval</field>
        <field name="stage_type">under_approval</field>
        <field name="sequence" eval="2" />
        <field name="fold" eval="False" />
    </record>
    <record id="maintenance.stage_3" model="maintenance.stage">
        <field name="name">Opened</field>
        <field name="stage_type">opened</field>
        <field name="sequence" eval="3" />
        <field name="fold" eval="True" />
        <field name="done" eval="True" />
    </record>
    <record id="maintenance.stage_4" model="maintenance.stage">
        <field name="name">Closed</field>
        <field name="stage_type">closed</field>
        <field name="sequence" eval="4" />
        <field name="fold" eval="True" />
        <field name="done" eval="True" />
    </record>
    <record id="stage_5" model="maintenance.stage">
        <field name="name">Cancelled</field>
        <field name="stage_type">cancelled</field>
        <field name="sequence" eval="5" />
        <field name="fold" eval="True" />
        <field name="done" eval="True" />
    </record>
    <record id="stage_6" model="maintenance.stage">
        <field name="name">Rejected</field>
        <field name="stage_type">rejected</field>
        <field name="sequence" eval="6" />
        <field name="fold" eval="True" />
        <field name="done" eval="True" />
    </record>
</data>
</odoo>
