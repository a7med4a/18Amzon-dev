<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="maintenance_shift_view_form" model="ir.ui.view">
        <field name="name">maintenance_shift_view_form</field>
        <field name="model">maintenance.shift</field>
        <field name="arch" type="xml">
            <form string="_form">
                <sheet>
                    <group>
                        <field name="dayofweek"/>
                        <field name="hour_from" widget="float_time" readonly="dayofweek =='4'"/>
                        <field name="hour_to" widget="float_time"/>
                        <field name="duration_hours" widget="float_time"/>
                        <field name="workshop_id"/>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>
    
    <record id="maintenance_shift_view_list" model="ir.ui.view">
        <field name="name">maintenance_shift_view_form</field>
        <field name="model">maintenance.shift</field>
        <field name="arch" type="xml">
            <list string="Shift" editable="bottom">
                <field name="dayofweek"/>
                <field name="hour_from" widget="float_time"/>
                <field name="hour_to" widget="float_time"/>
                <field name="duration_hours" widget="float_time"/>
                <field name="workshop_id"/>
            </list>
        </field>
    </record>
    
    <record id="maintenance_shift_action" model="ir.actions.act_window">
        <field name="name">maintenance shift Action</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">maintenance.shift</field>
        <field name="view_mode">list</field>
    </record>

    <!-- This Menu Item must have a parent and an action -->
    <menuitem id="maintenance_shift_menu" name="Shifts" parent="maintenance.menu_maintenance_configuration" action="maintenance_shift_action"/>

</odoo>
