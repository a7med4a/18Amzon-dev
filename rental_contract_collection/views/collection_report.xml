<odoo>

    <record id="collection_action_report_view_list" model="ir.ui.view">
        <field name="name">collection.action.report.view.list</field>
        <field name="model">collection.action.report</field>
        <field name="arch" type="xml">
            <list string="Collection Report" create="0">
                <field name="name" />
                <field name="rental_contract_id" />
                <field name="partner_id" />
                <field name="communication_date" />
                <field name="contact_type_id" />
                <field name="contact_result_id" />
                <field name="notes" />
                <field name="create_uid" string="Collector"/>
                <field name="create_date" />
            </list>
        </field>
    </record>



    <record id='collection_action_report_view_kanban' model='ir.ui.view'>
        <field name="name">collection.action.report.kanban</field>
        <field name="model">collection.action.report</field>
        <field name="arch" type="xml">
            <kanban group_create="false" group_edit="false" group_delete="false" sample="1" create="0">

                <templates>
                    <t t-name="card" class="flex-row">
                        <main>
                            <div>
                                <field class="fw-bolder fs-5" name="name"/>
                            </div>
                            <div>
                                Contract:
                                <field class="fw-bolder fs-5" name="rental_contract_id"/>
                            </div>
                            <div>
                                Customer:
                                <field class="fw-bolder fs-5" name="partner_id"/>
                            </div>
                            <div>
                                Communication Date:
                                <field class="fw-bolder fs-5" name="communication_date"/>
                            </div>
                            <div>
                                Contact Type:
                                <field class="fw-bolder fs-5" name="contact_type_id"/>
                            </div>
                            <div>
                                Contact Result:
                                <field class="fw-bolder fs-5" name="contact_result_id"/>
                            </div>
                            <div>
                                Collector:
                                <field class="fw-bolder fs-5" name="create_uid"/>
                            </div>
                            <div>
                                Created On:
                                <field class="fw-bolder fs-5" name="create_date"/>
                            </div>
                        </main>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="action_collection_action_report" model="ir.actions.act_window">
    <field name="name">Collection Report</field>
    <field name="res_model">collection.action.report</field>
    <field name="view_mode">list,kanban</field>
    <field name="help" type="html">
      <p class="oe_view_nocontent_create">
                Create your first rental contract
      </p>
    </field>
  </record>

</odoo>