<odoo>
    <data noupdate="1">
        <!-- Default STA Configuration Data -->
        <record id="sta_default_config" model="ir.config_parameter">
            <field name="key">sta_integration.base_url</field>
            <field name="value">https://tajeer-stg.api.elm.sa</field>
        </record>

        <record id="sta_default_production" model="ir.config_parameter">
            <field name="key">sta_integration.is_production</field>
            <field name="value">False</field>
        </record>

        <!-- Sample STA Branches (these will be replaced by actual sync) -->
