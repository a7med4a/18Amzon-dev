            <field name="name">Riyadh Main Branch</field>
            <field name="sta_branch_id">10583</field>
            <field name="city">Riyadh</field>
            <field name="address">King Fahd Road, Riyadh, Saudi Arabia</field>
            <field name="active">True</field>
        </record>

        <record id="sta_branch_sample_2" model="sta.branch">
            <field name="name">Jeddah Branch</field>
            <field name="sta_branch_id">10965</field>
            <field name="city">Jeddah</field>
            <field name="address">Prince Sultan Road, Jeddah, Saudi Arabia</field>
            <field name="active">True</field>
        </record>

        <!-- Sample STA Rent Policy -->
        <record id="sta_rent_policy_sample_1" model="sta.rent.policy">
            <field name="name">Standard Rental Policy</field>
            <field name="sta_policy_id">77</field>
