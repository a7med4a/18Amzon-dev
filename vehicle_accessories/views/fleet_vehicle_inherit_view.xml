<odoo>

    <record id="view_fleet_vehicle_accessories_form_inherit" model="ir.ui.view">
        <field name="name">fleet.vehicle.form.inherit</field>
        <field name="model">fleet.vehicle</field>
        <field name="inherit_id" ref="fleet.fleet_vehicle_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_view_vehicle_accessories" icon="fa-history" type="object"
                        help="Show Vehicle Accessories related">
                    <div class="o_stat_widget">
                        <span class="o_stat_text">Vehicle Accessories</span>
                    </div>
                </button>
            </xpath>

        </field>
    </record>
</odoo>
